---
// henter parametrene fra Astro.props
const { variant = "primary", size = "medium", href } = Astro.props;

// Definer den styling (Tailwind classes, der gør dig gældende for alle knapper)
const buttonStyling = " px-8 py-1 font-sans font-bold text-white rounded-lg";

// Definer den styling (Tailwind Classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
    "primary": " bg-orange transition delay-150 duration-200 ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-orange-20 hover:text-white cursor-pointer",
};

// Definer den styling (Tailwind classes), der gør sig gældende de forskellige størrelser
const sizeClasses = {
    "large": "text-lg",
    "medium": "text-base",
    "small": "text-sm",
};

---

<div>
  {href ? (
    <a href={href} class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
      <slot />
    </a>
  ) : (
    <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}>
      <slot />
    </button>
  )}
</div>
